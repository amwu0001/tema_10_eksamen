---
const { data, link } = Astro.props
---
<a href={link}>
<div class="talent_card">
   <img src={data.picture} alt="artist"/> 
   <h2>{data.name}</h2>
   <div class="genre">
   <p>{data.genre[0]}</p>
   <p>{data.genre[1]}</p>
   <p>{data.genre[2]}</p>
   </div>
</div>
</a>
<style>
    
    a{
        text-decoration: none;
    }
    img{
        width: 300px;
        height: 430px;
        object-fit: cover;
        object-position: 0% 100%; 
    }
    h2{
        font-weight: 600;
        line-height: 5px;
        margin-bottom: 0;
    }
    .genre{
        display: flex;
        line-height: 5px;
        gap: 5px;
    }
    img:hover{
        object-position: 100% 0%; 
        transition: 8s;
    }
</style>