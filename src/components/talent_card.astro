---
const { data, link } = Astro.props;
---

<a href={link}>
  <div class="talent_card">
    <img src={data.picture} alt="artist" />
    <h2>{data.name}</h2>
    <!-- Ved array data anvendes [], så der kun vælges et object(i dette tilfælde en "genre") af gangen -->
    <div class="genre">
      <h3>{data.genre[0]}</h3>
      <h3>{data.genre[1]}</h3>
      <h3>{data.genre[2]}</h3>
    </div>
  </div>
</a>
<style>
  a {
    text-decoration: none;
  }
  img {
    width: 300px;
    height: 320px;
    object-fit: cover;
    object-position: 0% 100%;
    transition: 2.5s;
  }
  h2 {
    font-weight: 600;
    line-height: 5px;
    margin-bottom: 0;
  }
  .genre {
    display: flex;
    line-height: 5px;
    gap: 5px;
  }
  img:hover {
    object-position: 100% 0%;
    transition: 8s;
  }
  @media (min-width: 800px) {
    img {
      width: 320px;
      height: 430px;
    }
  }
</style>
