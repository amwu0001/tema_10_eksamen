---
import "../styles/generel.css";

const { data } = Astro.props;
---

<!-- hvad hvis der er mere end 2 filtreringer?? -->
<a href=`${data.slug_wn}`><article class={data.type}>
  <div class="date_div">
    <p class="menu">{data.date}</p>
  </div>
  <div class="margin">
    <div class="event_grid">
      <div class="event_tekst">
        <h2>{data.headline}</h2>
        <p>{data.text[0]}</p>
        <a class="read_more" href=`${data.slug_wn}`>read more ></a>
      </div>
      <div class="img_grid">
        <img src={data.index_pictures} alt={data.index_headline} />
      </div>
    </div>
  </div>
</article></a>

<style>
  a{
    text-decoration: none;
  }
  .margin {
    margin: 20px;
  }
  .menu {
    text-align: right;
    border-bottom: 0.5px solid #1e1e1e;
    width: 60%;
    align-self: flex-end;
    margin-bottom: 3%;
  }

  .date_div {
    display: flex;
  }
  img {
    height: 265px;
    margin-top: 40px;
  }
  .img_grid {
    display: flex;
    justify-content: center;
  }
   @media (min-width: 800px) {
  .date_div {
    width: 75%;
  }
  .menu {
    font-size: 50px;
  }
  .event_grid{
    margin-left: 35px;
    padding-right: 400px;
  }
   .img_grid {
    justify-content: right;
  }
   img {
    margin-top: 20px;
  }
  }
</style>
