<header>
  <div class="header_mobile">
    <a href="index.html"><img class="logo" src="/imgs/logo.svg" alt="burger" /></a>
    <img class="ikon_burger" src="/imgs/lines.svg" alt="burger" />
    <img id="ikon_kryds" src="/imgs/kryds.svg" alt="kryds" />
  </div>
  <div id="navbar_mobile">
    <a href="talent.html" class="right_nav_mobile" id="talent">TALENT</a>
    <a href="whats_new.html" class="left_nav_mobile" id="wn">WHAT'S NEW?</a>
    <a href="about.html" class="right_nav_mobile" id="about">ABOUT</a>
    <a href="contact.html" class="left_nav_mobile" id="contact">CONTACT</a>
  </div>
</header>
<style>
  /**** STYLING AF BURGER MENU *****/
  @import url("https://fonts.googleapis.com/css2?family=Work+Sans:wght@300&display=swap"); /* importer font */
  #navbar_mobile {
    display: none;
    animation: 0.5s opacity ease-in-out reverse;
  }
  #navbar_mobile.hide {
    width: 100%;
    height: 100%;
    background-color: #f1eee8;
    position: fixed; /* ligger over det andet */
    z-index: 10; /* ligger over det andet */
    top: 0; /* starter fra toppen */
    left: 0; /* starter fra venstre */
    overflow-x: hidden; /* Ingen horizontal scroll */
    animation: 0.3s opacity ease-in;
  }
  @keyframes opacity {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
  @keyframes right {
    from {
      transform: translateX(1300px);
      opacity: 0;
    }
    to {
      transform: translateX(0);
      opacity: 1;
    }
  }
  @keyframes left {
    from {
      transform: translateX(-1300px);
    }
    to {
      transform: translateX(0);
    }
  }
  #talent {
    animation: 0.5s right ease-in-out;
  }
  #wn {
    animation: 0.7s left ease-in-out;
  }
  #about {
    animation: 0.9s right ease-in-out;
  }
  #contact {
    animation: 1.1s left ease-in-out;
  }
  /*tekst*/
  a {
    color: #1e1e1e;
    text-decoration: none;
    font-family: "Work Sans";
    font-size: 30px;
    transition: 1s;
  }
  /* lav flex row p√• menuen*/
  #navbar_mobile.hide {
    display: flex;
    flex-direction: column;
    justify-content: space-evenly;
    gap: 7%;
    padding-top: 30px;
    padding-bottom: 30px;
  }
  #ikon_kryds {
    display: none;
  }
  #ikon_kryds.change {
    display: block;
    max-width: 40px;
    z-index: 130;
    cursor: pointer;
  }
  .ikon_burger.hide {
    display: none;
  }
  /*streger over og under + position af tekst*/
  .right_nav_mobile {
    text-align: left;
    border-bottom: 0.5px solid #1e1e1e;
    width: 70%;
    align-self: flex-end;
    margin-bottom: 3%;
  }
  .left_nav_mobile {
    border-top: 0.5px solid #1e1e1e;
    text-align: right;
    width: 70%;
  }
  /*hover-effekt*/
  a:hover {
    width: 80%;
    transition: 1s;
  }

  /**** STYLING AF HEADER *****/
  .header_mobile {
    justify-content: space-between;
    align-items: center;
    display: flex;
    padding-left: 20px;
    padding-right: 20px;
  }
  .ikon_burger {
    max-width: 40px;
    z-index: 100;
    cursor: pointer;
  }
  .logo {
    max-width: 55px;
    z-index: 110;
    position: relative;
  }
  .logo:hover {
    scale: 1.05;
  }
  .ikon_burger:hover {
    scale: 1.05;
  }
  @media (min-width: 800px) {
    .logo {
      max-width: 90px;
    }
    .ikon_burger {
      max-width: 50px;
    }
    a {
      font-size: 35px;
    }
    #ikon_kryds.change {
      max-width: 55px;
    }
  }
</style>

<script>
  const burger = document.querySelector(".ikon_burger");
  const menu = document.querySelector("#navbar_mobile");
  const kryds = document.querySelector(".header_mobile #ikon_kryds");

  burger.addEventListener("click", burgermenu);
  kryds.addEventListener("click", burgermenu);

  function burgermenu() {
    console.log("burger");
    menu.classList.toggle("hide");
    burger.classList.toggle("hide");
    kryds.classList.toggle("change");
  }
</script>
