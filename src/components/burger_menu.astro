<style>
/**** STYLING AF BURGER MENU *****/
@import url('https://fonts.googleapis.com/css2?family=Work+Sans:wght@300&display=swap');/* importer font */
#navbar_mobile{
display: none;
}
#navbar_mobile.hide {
    width: 100%;
    height: 100%;
    background-color: #f1eee8;
    position: fixed; /* ligger over det andet */
    z-index: 1; /* ligger over det andet */
    top: 0; /* starter fra toppen */
    left: 0; /* starter fra venstre */
    overflow-x: hidden; /* Ingen horizontal scroll */
    transition: 0.5s; /* fader in */
    }
    /*tekst*/
a{
    color: #1e1e1e;
    text-decoration: none;
    font-family: "Work Sans";
font-size: 30px;
}
/* lav flex row p√• menuen*/
#navbar_mobile.hide{
    display: flex;
    flex-direction: column;
    justify-content: space-evenly;
    gap: 7%;
}
/*streger over og under + position af tekst*/
.right_nav_mobile{
    text-align: left;
    border-bottom: 0.5px solid #1e1e1e;
    width: 70%;
    align-self: flex-end;
    margin-bottom: 3%;
}
.left_nav_mobile{
    border-top: 0.5px solid #1e1e1e;
    text-align: right;
    width: 70%;
}
/*hover-effekt*/
a:hover{
width: 85%;
transition: 1s;
}

/**** STYLING AF HEADER *****/
.header_mobile {
	justify-content: space-between;
    align-items: center;
	z-index: 10;
    position: sticky;
    display: flex;
}
.ikon_burger{
	max-width: 50px;
}
</style>

<script>
const burger = document.querySelector(".header_mobile .ikon_burger");
const menu = document.querySelector("#navbar_mobile");

burger.addEventListener("click", burgermenu);

function burgermenu() {
  console.log("burger");
  menu.classList.toggle("hide");

}
</script>